/* pages/order/order.wxss */

.tab-content1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-image {
  width: 70%;
  margin-top: 130rpx;
  margin-bottom: 50rpx;
}

.navs {
  display: flex;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}

.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

.orders-box {
  padding-bottom: 105rpx;
}

.orders-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border: 1rpx solid #ededed;
  border-radius: 20%;
}

.title {
  position: absolute;
  top: 1rpx;
  left: 1rpx;
  width: 99%;
  text-align: center;
  font-size: 14px;
}

.itemsObject {
  position: relative;
  width: 100%;
  height: 130rpx;
}

.orders-thumb {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 120rpx;
  height: 120rpx;
}

.orders-pro-name {
  position: absolute;
  left: 185rpx;
  top: 20rpx;
  font-size: 14px;
}

.orders-pro-size {
  position: absolute;
  left: 185rpx;
  top: 80rpx;
  font-size: 12px;
  color: gray;
  height: 50rpx;
}

.orders-pro-price {
  position: absolute;
  right: 5rpx;
  top: 20rpx;
  font-size: 14px;
  color: red;
}

.orders-count-num {
  position: absolute;
  right: 5rpx;
  top: 80rpx;
  font-size: 14px;
  height: 50rpx;
}

.orders-list .buttonGroup {
  position: relative;
  width: 100%;
  height: 42rpx;
}

.orders-list .buttonGroup .buttonPay {
  position: absolute;
  right: 5rpx;
  width: 150rpx;
  height: 40rpx;
  font-size: 10px;
  text-align: center;
}

.orders-list .buttonGroup .buttonCancel{
  position: absolute;
  right: 170rpx;
  width: 150rpx;
  height: 40rpx;
  font-size: 10px;
  text-align: center;
}

.orders-list .buttonGroup .buttonDilivery{
  position: absolute;
  right: 340rpx;
  width: 150rpx;
  height: 40rpx;
  font-size: 10px;
  text-align: center;
}

.orders-list view {
  line-height: 60rpx;
}

.orders-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  border-top: 1rpx solid #ededed;
}

.orders-footer .orders-footer-total {
  display: inline-block;
  width: 510rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  color: #a55350;
}

.orders-footer .orders-footer-btn {
  display: inline-block;
  width: 240rpx;
  text-align: center;
  color: #fff;
  background: #ab956d;
}
